{
    log {
        format console
    }
}

:80 {
    root * /var/www/jugaripunt
    file_server

    reverse_proxy /api/* unix//var/run/jugaripunt/jugaripunt.sock

    encode gzip

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
    }
}